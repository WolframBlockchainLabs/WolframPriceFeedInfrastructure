  "images": {
    "avatar": {
      "path": "storage/avatars",
      "sizes": {
        "s": {
          "width": 120,
          "height": 120,
          "quality": 90
        },
        "m": {
          "width": 200,
          "height": 200,
          "quality": 90
        },
        "l": {
          "width": 500,
          "height": 500,
          "quality": 90
        }
      }
    }
  },
  "logs": [
    {
      "isPlainText": "{{IS_PLAIN_TEXT}}",
      "name": "api",
      "level": "info",
      "transports": [
        {
          "type": "daily-file",
          "filename": "logs/api-%DATE%.log",
          "maxFiles": "7d"
        },
        {
          "type": "console",
          "level": "warning",
          "pretty": true
        },
        {
          "type": "console",
          "level": "error",
          "pretty": true
        },
        {
          "type": "console",
          "level": "info",
          "pretty": true
