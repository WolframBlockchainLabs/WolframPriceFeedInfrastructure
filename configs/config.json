{
  "appPort": "{{PORT}}",
  "appTestPort": "3002",
  "mainUrl": "{{MAIN_URL}}",
  "https": false,
  "projectName": "{{PROJECT_NAME}}",
  "db": {
    "username": "{{DB_USERNAME}}",
    "password": "{{DB_PASSWORD}}",
    "database": "{{DB_DATABASE}}",
