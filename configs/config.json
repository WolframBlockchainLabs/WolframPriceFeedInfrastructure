        {
          "type": "console",
          "level": "warning",
          "pretty": true
        },
        {
          "type": "console",
          "level": "error",
          "pretty": true
        },
        {
          "type": "console",
          "level": "info",
          "pretty": true
        }
      ]
    }
  ],

